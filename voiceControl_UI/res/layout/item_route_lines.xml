<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="14dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="14dp" >

    <TextView
        android:id="@+id/textView_route_lines_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="路线一："
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView_route_lines_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textView_route_lines_num"
        android:layout_alignBaseline="@id/textView_route_lines_num"
        android:singleLine="true"
        android:text="内容"
        android:textSize="15sp"
        android:textColor="@color/font_deep_gray"
         />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_route_lines_num"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/textView_route_lines_num" >

        <TextView
            android:id="@+id/textView_route_lines_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:drawableLeft="@drawable/navigation_transit_time"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="时间"
            android:textColor="@color/font_deep_gray"
            android:textSize="13sp" />
        
        <TextView
            android:id="@+id/textView_route_lines_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/navigation_transit_distance"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="距离"
            android:textColor="@color/font_deep_gray"
            android:textSize="13sp" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            android:textSize="13sp" />
        
    </LinearLayout>

</RelativeLayout>